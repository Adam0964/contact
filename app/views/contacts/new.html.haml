.container
  %h2 Contact
  = simple_form_for @contact, :html => {:class => 'well span10' } do |f|
    = f.input :name,  :required => true, :autofocus => true
    = f.input :email, :required => true
    = f.label :contact_method
    = f.select :contact_method, options_for_select(["Select one", "iPhone", "iPad", "Universal"]), :required => true
    %br
    %br
    = f.input :message, :as => :text, :required => false, :input_html => {:id => "message", :class => "input-xlarge span7", :rows => "10"}, :maxlength => 300
    = f.button :submit, 'Send message', :class => 'btn btn-primary'

